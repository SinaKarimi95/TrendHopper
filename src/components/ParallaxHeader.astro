<style>
  header {
    height: 75vh;
    z-index: -1;
    display: block;
    position: relative;
    max-width: 1920px;
    margin: auto;
  }

  header img {
    position: fixed;
    height: 100vh;
    width: 100%;
    object-fit: cover;
    object-position: bottom;
    top: -25vh;
    max-width: 1920px;
    user-select: none;
    pointer-events: none;
  }

  .scroll.trendLogo {
    animation-name: trendHopper;
    animation-duration: 4s;
    animation-iteration-count: infinite;
    animation-timing-function: ease-in-out;
    z-index: 0;
    left: 32vw;
    max-width: 20%;
    max-height: 20%;
    top: 15vh;
    object-fit: unset;
  }

  
  .scroll.hopperLogo {
    animation-name: trendHopper;
    animation-duration: 4s;
    animation-iteration-count: infinite;
    animation-timing-function: ease-in-out;
    z-index: 0;
    left: 50vw;
    max-width: 20%;
    max-height: 20%;
    top: 22vh;
    transform: rotate(10deg);
    object-fit: unset;
  }

  .topCurtain {
    z-index: 1;
    max-width: 1920px;
    max-height: 1080px;
    object-fit: unset;
    transform: translateY(8vh);
  }

  .scroll.leftCurtain {
    z-index: 1;
    left: 3.9vw;
    max-width: 90%;
    max-height: 80%;
    top: -11vh;
    object-fit: unset;
  }

  .scroll.rightCurtain {
    z-index: 0;
    left: 9.4vw;
    top: -11vh;
    max-width: 90%;
    max-height: 80%;
    height: 100%;
    object-fit: unset;
  }



  @media screen and (max-width: 1920px) and (max-height: 1080px) {
    .scroll.leftCurtain {
      left: -11.5vw;
      top: -11vh;
    }

    .scroll.rightCurtain {
      left: 5vw;
      top: -11vh;
    }
  }

  .sun {
    mix-blend-mode: overlay;
  }

  .crystal {
    animation-name: bob;
    animation-duration: 2.5s;
    animation-iteration-count: infinite;
    animation-timing-function: ease-in-out;
  }


  @keyframes bob {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-15px);
    }
    100% {
      transform: translateY(0px);
    }
  }

  @keyframes trendHopper {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(10px) rotate(10deg);
    }
    100% {
      transform: translateY(0px);
    }
</style>
